<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phuag.sample.auth.dao.SysLogMapper">
    <resultMap id="BaseResultMap" type="com.phuag.sample.auth.domain.SysLog" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="CHAR" />
        <result column="title" property="title" jdbcType="VARCHAR" />

        <result column="remote_addr" property="remoteAddr" jdbcType="VARCHAR" />
        <result column="create_by" property="createBy" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="user_agent" property="userAgent" jdbcType="VARCHAR" />
        <result column="exception" property="exception" jdbcType="VARCHAR" />
        <result column="params" property="params" jdbcType="VARCHAR" />
        <result column="method" property="method" jdbcType="VARCHAR" />
        <result column="request_uri" property="requestUri" jdbcType="VARCHAR" />
    </resultMap>
    <select id="getAllLog" resultMap="BaseResultMap" parameterType="com.phuag.sample.auth.vo.LogDateVO">
        select
        *
        from sys_log
        <where>
            <if test="beginTime != null ">
                AND create_date >= #{beginTime,jdbcType=VARCHAR}
            </if>
            <if test="finishTime != null ">
                AND create_date &lt;= #{finishTime,jdbcType=VARCHAR}
            </if>
        </where>
        <if test="sort == 1">
            ORDER BY create_date DESC
        </if>
        <if test="sort == 0">
            ORDER BY create_date ASC
        </if>
    </select>

</mapper>